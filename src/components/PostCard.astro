---
import type { Post } from '../lib/contentful/posts'
import FormattedDate from './FormattedDate.astro';

interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<a class="post-container" href={`/posts/${post.slug}`}>
  <div>
    <h3>{post.title}</h4>
    <p>Published <FormattedDate date={post.date} /></p>
  </div>
  <p>
    {post.previewText} 
  </p>
  <span class="button">
    Read more
    <img src="arrow-right.svg" class="svg-icon" />
  </span>
</a>

<style>
	.post-container {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 1rem;

		color: black;
		text-decoration: none;
	}
	.post-container h3 {
		font-size: 1.7rem;
	}

  .button {
    font-weight: bold;
    font-size: 1rem;
    background: none;
    border: none;
    padding: 0;

    color: black;
    text-decoration: none;
    cursor: pointer;

    display: inline-flex;
    align-items: center;
    position: relative;
  }
  .button .svg-icon {
    display: inline-block;
    width: 1em;
    height: auto;
    vertical-align: middle;
    margin-left: 0.25rem;
  }
  .button::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0%;
    height: 2px;
    background: currentColor;
    transition: width 0.3s ease-out;
  }

  @media (hover: hover) {
    .post-container:hover .button::after {
      width: 100%;
    }
  }
</style>