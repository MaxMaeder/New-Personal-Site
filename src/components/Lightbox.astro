---
import XMark from "../icons/XMark.astro";
---

<div id="lightbox">
  <iframe allowfullscreen />
  <XMark />
</div>

<style is:global>
  #lightbox.visible {
    opacity: 1;
    pointer-events: unset;
  }
</style>

<style>
  #lightbox {
    position: fixed;
    inset: 0;
    z-index: 100;

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: rgba(0, 0, 0, 0.7);

    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }
  iframe {
    width: 80vw;
    aspect-ratio: 16 / 9;
    border: none;
  }
  #lightbox :global(svg) {
    position: fixed;
    top: 2rem;
    right: 2rem;
    height: 3rem;
    width: auto;
    cursor: pointer;
  }
  @media (max-width: 799px) {
    #lightbox {
      padding: 0 1rem;
    }
    iframe {
      width: 100%;
    }
    #lightbox :global(svg) {
      top: 1rem;
      right: 1rem;
      height: 2rem;
    }
  }
</style>