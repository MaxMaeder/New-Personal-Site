---
interface Props {
	date: Date;
}

const { date } = Astro.props;

const isCurrentYr = date.getFullYear() == new Date().getFullYear()
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString("en-us", {
			year: isCurrentYr ? undefined : "numeric",
			month: "short",
			day: "numeric",
		})
	}
</time>
